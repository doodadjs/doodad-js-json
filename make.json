	"version": "0.4.0",
	"stage": "a",
	"dependencies": [
		{
			"name": "doodad-js",
			"client": true,
			"server": true,
			"browserify": true
		},
		{
			"name": "doodad-js-io",
			"client": true,
			"server": true,
			"browserify": true
		}
	],
	"modules": [
		{
			"src": "common/IO_Json.js",
			"client": true,
			"server": true,
			"browserify": true
		},
		{
			"src": "client/IO_Json_Loader.js",
			"client": true,
			"server": false,
			"browserify": false
		},
		{
			"src": "server/IO_Json_Loader.js",
			"client": false,
			"server": true,
			"browserify": true
		}
	],
	"tasks": {
		"make": {
			"operations": [
				{
					"class": "Make.Generate.Package"
				},

				{
					"class": "Make.File.Javascript",
					"source": "%PACKAGEDIR%/lib/jsonparse/jsonparse.js",
					"destination": "%BUILDDIR%/jsonparse.min.js",
					"runDirectives": false
				},

				{
					"class": "Make.Task",
					"name": "install"
				},
				{
					"class": "Make.Task",
					"name": "browserify"
				},
				{
					"class": "Make.Task",
					"name": "webpack"
				}
			]
		},
		"install": {
			"operations": [
				{
					"class": "Make.Generate.Package"
				},
				
				{
					"class": "Make.File.Copy",
					"source": "%PACKAGEDIR%/lib/jsonparse/jsonparse.js",
					"destination": "%INSTALLDIR%/%PACKAGENAME%/jsonparse.js"
				},
				{
					"class": "Make.File.Javascript",
					"source": "%PACKAGEDIR%/lib/jsonparse/jsonparse.js",
					"destination": "%INSTALLDIR%/%PACKAGENAME%/jsonparse.min.js",
					"runDirectives": false
				}
			]
		},
		"browserify": {
			"operations": [
				{
					"class": "Make.Generate.Package"
				}
			]
		},
		"webpack": {
			"operations": [
				{
					"class": "Make.Generate.Package"
				}
			]
		}
	}
}